    <header>
  
      <h1 class="logo"><%= link_to "Let's Do This", root_path %></h1>
      <nav>
        <ul>
          <% if signed_in? %>
          <li><%= link_to "My Tasks", current_user %></li>
          <li><%= link_to "Settings", edit_user_path(current_user) %></li>
          <li><%= link_to "Users", users_path %></li>
