<section id="main" class="users">
  <h2>All Users</h2>
  <ul>
  <% @users.each do |user| %>
  <li>
    <%= link_to name(user), user_path(user) %>
    <% if current_user.admin? %>
      | <%= link_to "Delete", user, :method => :delete, :confirm => "You sure?",
                                    :title => "Delete #{name(user)}" %> 
    <% end %>
  </li>
  <% end %>
  </ul>
</section>
